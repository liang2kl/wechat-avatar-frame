  position: relative;
  /* 675 = 750 * 0.9 */
  width: 675rpx; 
  /* height: 675rpx; */
}

#edit {
  position: relative;
  margin-top: 100rpx;
  overflow: hidden;
}

#edit image {
  width: 675rpx; 
}

#edit movable-area {
  position: absolute;
  top:-200rpx;
  left:-200rpx;
  width: 1075rpx;
}
